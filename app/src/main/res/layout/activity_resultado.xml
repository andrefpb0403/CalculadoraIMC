<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultadoActivity">

    <LinearLayout
        android:id="@+id/vg_header"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_bg"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/ic_peso"
            android:src="@drawable/ic_peso"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="24dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="24dp"
            app:tint="@color/white" />

        <TextView
            android:text="Calculadora IMC"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="Veja abaixo o resultado e a classificação do seu IMC:"
            android:textColor="@color/white"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="48dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_resultado"
            android:textSize="64sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="48dp"
            android:layout_marginTop="24dp"
            android:maxLength="5"
            android:textStyle="bold"
            tools:text="23.66"
            tools:layout_editor_absoluteX="179dp"
            tools:layout_editor_absoluteY="255dp" />

    </LinearLayout>



    <TextView
        android:id="@+id/tv_classificacao_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:text="A classificação do seu IMC é:"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="478dp" />

    <TextView
        android:id="@+id/tv_classificao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="NORMAL"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="560dp" />

</LinearLayout>